<%- include("header") %>

<div class="box" id="heading">
  <h1><%=title %></h1>
</div>



<div class="box">
  <% for (let i=0; i<myItems.length; i++) { %>
    <div class="item">
      <input type="checkbox" />
      <p><%= myItems[i] %></p>
    </div>
    <% } %>

    <form action="/" method="POST" class="item">
      <input
        type="text"
        name="addItem"
        placeholder="New Item"
        autocomplete="off"
      />
      <button type="submit" name="button" value=<%= title %> >+</button>
    </form>
  </myItems.length;>
</div>


<%- include("footer") %>
